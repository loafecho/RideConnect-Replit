# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rideconnect

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# OpenRouteService Configuration (Optional - for accurate routing)
# Get free API key at: https://openrouteservice.org/dev/
# Free tier: 5000 requests/day, 40 requests/minute
VITE_OPENROUTE_API_KEY=your_openroute_api_key_here

# LocationIQ Configuration (Required - for address autocomplete)
VITE_LOCATIONIQ_API_KEY=your_locationiq_api_key_here

# Cal.com API Configuration (Optional - for professional calendar management)
# Get API access at: https://cal.com/settings/developer
# Free tier: Create and manage bookings, automated reminders
CAL_COM_API_URL=https://api.cal.com/v2
CAL_COM_ACCESS_TOKEN=your_cal_access_token_here
CAL_COM_EVENT_TYPE_ID=your_event_type_id_here
CAL_COM_USER_ID=your_cal_user_id_here

# Environment
NODE_ENV=development